<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/app_gradient_color_background3">

        <!-- Logo PDF -->
        <ImageView
            android:id="@+id/imageViewPdfLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pdf"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"/>

        <!-- Konten Kartu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Status -->


            <!-- Nama Materi -->
            <TextView
                android:id="@+id/tv_nama_materi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Materi"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <!-- Informasi Tambahan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/textViewMataPelajaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mata Pelajaran: Matematika"
                    android:textSize="14sp"/>

                <!-- Topik -->
                <TextView
                    android:id="@+id/textViewTopik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topik: Trigonometri"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
